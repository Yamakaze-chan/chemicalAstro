<footer class="bg-[var(--color-3)] text-[var(--color-2)] text-sm">
  <div class="max-w-7xl mx-auto py-10 px-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
    
    <!-- Logos -->
    <div class="flex flex-col space-y-4 items-center md:items-start">
      <img src="" alt="Logo" loading="lazy" class="w-48 h-auto">
      <img src="" alt="Logo" loading="lazy" class="w-48 h-auto">
    </div>

    <!-- Address Sections -->
    <div class="space-y-8">
      <div>
        <h3 class="text-lg font-semibold mb-1">Headquarters</h3>
        <p>AntStack Inc.</p>
        <p>8 The Green STE D, Dover, Kent, 19901, USA.</p>
        <div class="flex items-center space-x-2 mt-2">
          <img src="" alt="Call Icon" loading="lazy" class="w-4 h-4">
          <span>+1 (650) 305-6238</span>
        </div>
      </div>
      <div>
        <h3 class="text-lg font-semibold mb-1">Delivery Centre</h3>
        <p>AntStack Technologies Private Limited</p>
        <p>#620, 3rd Floor, Dr Rajkumar Rd, 2nd Block, 1st Main, Rajajinagar, Bengaluru, Karnataka 560010</p>
        <div class="flex items-center space-x-2 mt-2">
          <img src="" alt="Call Icon" loading="lazy" class="w-4 h-4">
          <span>080-41330449 / +91-9353139419</span>
        </div>
      </div>
    </div>

    <!-- Socials and Newsletter -->
    <div class="space-y-6">
      <div>
        <p class="text-lg font-semibold mb-2">Follow</p>
        <div class="flex flex-wrap gap-3 text-[var(--color-2)] text-xl">
          <i class="fab fa-x-twitter"></i>
          <i class="fab fa-instagram"></i>
          <i class="fab fa-facebook-f"></i>
        </div>
      </div>

      <div class="space-y-2">
        <div class="flex items-center space-x-2">
          <img src="" alt="Newsletter Icon" class="w-6 h-6">
          <p class="font-medium">Subscribe to our newsletter</p>
        </div>
        <p class="text-sm">Our bi-weekly newsletter delivers serverless, AI, tech trends, podcasts and blogs straight to your inbox.</p>
        <form class="flex flex-col sm:flex-row gap-2 mt-2">
          <input type="email" placeholder="Enter email address" required class="bg-white px-4 py-2 rounded focus:outline-none w-full sm:w-auto text-black">
          <button type="submit" class="bg-[var(--color-4)] hover:bg-[var(--color-1)] px-4 py-2 rounded text-white">Subscribe</button>
        </form>
      </div>
    </div>
  </div>
</footer>
