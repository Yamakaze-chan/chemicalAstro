---
// No props required for now
---
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<footer class="bg-[var(--color-3)] text-[var(--color-2)] text-sm">
  <div class="max-w-7xl mx-auto py-10 px-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
    
    <!-- Logos -->
    <div class="flex flex-col space-y-4 items-center md:items-start">
      <img src="" alt="Logo" loading="lazy" class="w-48 h-auto">
      <img src="" alt="Logo" loading="lazy" class="w-48 h-auto">
    </div>

    <!-- Address Sections -->
    <div class="space-y-8">
      <div>
        <h3 class="text-lg font-semibold mb-1">Công Ty</h3>
        <div class="flex items-center space-x-2 mt-2">
        <i class="fa-solid fa-building"></i>
        <p>Name Company</p>
        </div>
        <div class="flex items-center space-x-2 mt-2">
        <i class="fa-solid fa-location-dot"></i>
        <p>123 Đường ABC, Quận 1, TP.HCM</p>
        </div>
        <div class="flex items-center space-x-2 mt-2">
           <i class="fa-solid fa-phone"></i>
          <span>+84 000000000</span>
        </div>
      </div>
      
    </div>

    <!-- Socials and Newsletter -->
    <div class="space-y-6">
      <div>
        <p class="text-lg font-semibold mb-2">Follow</p>
        <div class="flex flex-wrap gap-3 text-[var(--color-2)] text-xl">
          <i class="fab fa-x-twitter"></i>
          <i class="fab fa-instagram"></i>
          <i class="fab fa-facebook-f"></i>
        </div>
      </div>

      <div class="space-y-2">
        <div class="flex items-center space-x-2">
          <i class="fa-solid fa-envelope"></i>
          <p class="font-medium">Subscribe to our newsletter</p>
        </div>
        <p class="text-sm">Our bi-weekly newsletter delivers serverless, AI, tech trends, podcasts and blogs straight to your inbox.</p>
        <form id="subscribe-form" class="flex flex-col sm:flex-row gap-2 mt-2">
  <input
    type="email"
    name="email"
    placeholder="Enter email address"
    required
    class="bg-white px-4 py-2 rounded focus:outline-none w-full sm:w-auto text-black"
  />
  <button
    type="submit"
    class="bg-[var(--color-4)] hover:bg-[var(--color-1)] px-4 py-2 rounded text-white"
  >
    Subscribe
  </button>
</form>

    <script>
          const form = document.getElementById("subscribe-form");

          form.addEventListener("submit", async (e) => {
            e.preventDefault();
            const email = form.email.value;

            const res = await fetch("/api/subscribe", {
              method: "POST",
              body: JSON.stringify({ email }),
              headers: {
                "Content-Type": "application/json",
              },
            });

            const data = await res.json();
            alert(data.message);
            form.reset();
          });
        </script>

      </div>
    </div>
  </div>
</footer>
