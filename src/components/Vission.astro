<style>
.invisible-before-scroll {
  opacity: 0;
  transform: translateY(40px);
  transition: all 0.6s ease-out;
}

</style>

<!-- Scroll-triggered animation logic -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const el = entry.target;
          el.classList.remove("invisible-before-scroll");

          // Lấy class animation từ data attribute
          const animationClass = el.getAttribute("data-animate");
          if (animationClass) {
            el.classList.add(animationClass);
          }

          // Ngưng theo dõi phần tử sau khi đã hiện
          observer.unobserve(el);
        }
      });
    }, {
      threshold: 0.1
    });

    // Tìm mọi phần tử cần animate
    document.querySelectorAll(".animate-on-scroll").forEach(el => {
      observer.observe(el);
    });
  });
</script>

