---
import "../styles/global.css";
import "../styles/ourmission.css";
---
<div class="bg-white">
    <!-- SUSTAINABILITY -->
    
    <section class="py-12 text-center">
     <div class="max-w-7xl mx-auto px-4">
    <h1 
        class="text-4xl text-[var(--color-1)] font-bold font-inter invisible-before-scroll opacity-0 animate-on-scroll animation-delay-500 mt-[5%]"
        data-animate="animate-slideDown"
      >
        TÍNH BỀN VỮNG
      </h1>
    <div class="flex flex-col md:flex-row items-center justify-center gap-8 mt-10 px-4 md:px-0">

    <!-- Image -->
    <div class="flex-shrink-0">
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTaEPPz8FeQ0WpkxgJDkhgkwn6sxbn3lizPzg&s"
            alt="Sustainability Image"
            class="w-[220px] h-[320px] rounded-xl object-cover shadow-lg transform scale-90 opacity-0 invisible-before-scroll animate-on-scroll animation-delay-1500 transition duration-300 hover:scale-105 hover:brightness-105"
            data-animate="animate-fadeIn"
          />
    </div>

    <!-- Text -->
    <div class=" max-w-2xl text-center md:text-left">
       <p 
          class="mt-12 text-lg text-black font-roboto invisible-before-scroll opacity-0 animate-on-scroll animation-delay-1500 max-w-2xl mx-auto" 
          data-animate="animate-slideInLeft"
        >
