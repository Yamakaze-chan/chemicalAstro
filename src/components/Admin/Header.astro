<header class="z-10 fixed top-0 w-full bg-gray-800 text-white shadow-md">
  <div class="max-w-screen-xl mx-auto flex items-center justify-between p-4" x-data="{ open: false }">
    <!-- Logo & Tên -->
    <div class="flex items-center space-x-2">
      <i class="fa-solid fa-user-shield text-white text-2xl"></i>
      <a href="/admin" class="text-2xl font-bold">Admin Panel</a>
    </div>

    <!-- Nút Toggle Mobile -->
    <button class="md:hidden" @click="open = !open">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
        viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
        <path x-show="!open" d="M4 6h16M4 12h16M4 18h16" />
        <path x-show="open" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <!-- Menu điều hướng -->
    <nav :class="{ 'block': open, 'hidden': !open }" class="md:flex space-x-4 hidden">
      <a href="/admin" class="block px-4 py-2 hover:bg-gray-700 rounded">Dashboard</a>
      <a href="/admin/products" class="block px-4 py-2 hover:bg-gray-700 rounded">Sản phẩm</a>
      <a href="/admin/news" class="block px-4 py-2 hover:bg-gray-700 rounded">Tin Tức</a>
      <a href="/admin/contact" class="block px-4 py-2 hover:bg-gray-700 rounded">Liên Hệ</a>
      <a href="/logout" class="block px-4 py-2 bg-red-600 hover:bg-red-500 rounded">Đăng xuất</a>
    </nav>
  </div>
</header>
