---
import { requireLogin } from '../../lib/auth';
const user = requireLogin(Astro.cookies);
if (!user) {
  return Astro.redirect("/login");
}
---

<footer class="bg-gray-800 text-white text-sm py-4 mt-10">
  <div class="max-w-screen-xl mx-auto px-4 flex flex-col md:flex-row justify-between items-center">
    <p>Xin chào, {user.username}!</p>
    <div class="flex space-x-4">
      <a href="/admin" class="hover:underline">Dashboard</a>
      <a href="/api/logout" class="hover:underline text-red-400">Đăng xuất</a>
    </div>
  </div>
</footer>
