            class="w-[220px] h-[320px] rounded-xl object-cover shadow-lg transform scale-90 opacity-0 invisible-before-scroll animate-on-scroll animation-delay-2900 transition duration-300 hover:scale-105 hover:brightness-105"
            data-animate="animate-fadeIn"
          />
        </div>
    </div>
 </section>


<style>
.invisible-before-scroll {
  opacity: 0;
  transform: translateY(40px);
  transition: all 0.6s ease-out;
}

</style>

<!-- Scroll-triggered animation logic -->
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const el = entry.target;
          el.classList.remove("invisible-before-scroll");

          // Lấy class animation từ data attribute
          const animationClass = el.getAttribute("data-animate");
          if (animationClass) {
            el.classList.add(animationClass);
          }

          // Ngưng theo dõi phần tử sau khi đã hiện
          observer.unobserve(el);
        }
      });
    }, {
      threshold: 0.1
    });

    // Tìm mọi phần tử cần animate
    document.querySelectorAll(".animate-on-scroll").forEach(el => {
      observer.observe(el);
    });
  });
</script>

